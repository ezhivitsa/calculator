@import 'variables.pcss';

.math-buttons {
  display: flex;
  flex-direction: column;
  width: 85px;
  margin-left: var(--grid2);

  &__btn {
    width: 100%;
    margin-top: var(--grid2);
    font-size: var(--font-size-500);
    font-weight: var(--font-weight-500);

    &._clean {
      font-size: var(--font-size-300);
    }
  }
}
